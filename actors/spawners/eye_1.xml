<actor ao="false" behavior="spawner" minimap="menus/minimap.xml:enemy_spawn">
	<behavior>
		<dictionary>
			<array name="spawns">
				<int>750</int><string>actors/eye_1_small.xml</string>
				<int>250</int><string>actors/eye_1.xml</string>				
			</array>
			<entry name="frequency"><int>2000</int></entry>
			<entry name="hp"><int>120</int></entry>
			<entry name="multiplayer-scale-hp"><bool>true</bool></entry>
			<entry name="spawn-range"><float>7</float></entry>
			<entry name="death-snd"><string>sound/monsters.xml:death_spawn_eye</string></entry>
			<entry name="hit-effect"><string>effects/particles.xml:hit_eye_1_small</string></entry>
			<entry name="hit-particle"><string>effects/particles.xml:particle_eye_1_small</string></entry>
			<entry name="corpse"><string>actors/spawners/eye_1_razed.xml</string></entry>					
		</dictionary>
	</behavior>


	<sprite scale="16" name="default">
		<texture>actors/spawners/eye_1.png</texture>
		<origin>16 16</origin>					
		<frame time="1000">0 0 32 32</frame>				
		<frame time="200">32 0 32 32</frame>				
		<frame time="500">0 0 32 32</frame>				
		<frame time="200">64 0 32 32</frame>			
		<frame time="200">96 0 32 32</frame>		
		<frame time="200">64 0 32 32</frame>												
	</sprite>
	
	<collision static="true">
		<circle offset="0 0" radius="12" />
	</collision>		
	
</actor>