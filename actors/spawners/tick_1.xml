<actor behavior="spawner" minimap="menus/minimap.xml:enemy_spawn" ao="false">
	<behavior>
		<dictionary>
			<array name="spawns">
				<int>500</int><string>actors/tick_1_small.xml</string>
				<int>500</int><string>actors/tick_1.xml</string>
			</array>
			<entry name="frequency"><int>1750</int></entry>
			<entry name="hp"><int>100</int></entry>
			<entry name="multiplayer-scale-hp"><bool>true</bool></entry>
			<entry name="spawn-range"><float>7</float></entry>
			<entry name="death-snd"><string>sound/monsters.xml:death_spawn_tick</string></entry>
			<entry name="hit-effect"><string>effects/particles.xml:hit_spawner_tick_1</string></entry>
			<entry name="hit-particle"><string>effects/particles.xml:particle_spawner_tick_1</string></entry>
			<entry name="corpse"><string>actors/spawners/tick_1_razed.xml</string></entry>					
		</dictionary>
	</behavior>


	<sprite scale="16" name="default">
		<texture>actors/spawners/tick_1.png</texture>
		<origin>20 16</origin>					
		<frame time="1000">0 0 40 32</frame>			
	</sprite>
	
	<collision static="true">
		<circle offset="0 0" radius="15" />
	</collision>		
</actor>