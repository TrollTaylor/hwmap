<actor ao="false" behavior="spawner" minimap="menus/minimap.xml:enemy_spawn">
	<behavior>
		<dictionary>
			<array name="spawns">
				<int>750</int><string>actors/wisp_1_small.xml</string>
				<int>250</int><string>actors/wisp_1.xml</string>				
			</array>
			<entry name="frequency"><int>3000</int></entry>
			<entry name="hp"><int>150</int></entry>
			<entry name="multiplayer-scale-hp"><bool>true</bool></entry>
			<entry name="spawn-range"><float>7</float></entry>
			<entry name="death-snd"><string>sound/monsters.xml:death_spawn_wisp</string></entry>
			<entry name="hit-effect"><string>effects/particles.xml:hit_tick_1_small</string></entry>
			<entry name="hit-particle"><string>effects/particles.xml:particle_tick_1_small</string></entry>
			<entry name="corpse"><string>actors/spawners/wisp_1_razed.xml</string></entry>					
		</dictionary>
	</behavior>


	<sprite scale="16" name="default">
		<texture>actors/spawners/wisp_1.png</texture>
		<origin>16 16</origin>					
		<frame time="200">0 0 32 32</frame>				
		<frame time="200">32 0 32 32</frame>				
		<frame time="200">64 0 32 32</frame>				
		<frame time="200">96 0 32 32</frame>				
		<frame time="200">128 0 32 32</frame>				
		<frame time="200">160 0 32 32</frame>				
		<frame time="200">192 0 32 32</frame>				
		<frame time="200">224 0 32 32</frame>				
		<frame time="200">0 32 32 32</frame>				
		<frame time="200">32 32 32 32</frame>				
		<frame time="200">64 32 32 32</frame>				
		<frame time="200">96 32 32 32</frame>								
	</sprite>
	
	<collision static="true">
		<circle offset="0 0" radius="14" />
	</collision>		
	
	<light>
		<origin>0 0</origin>
		<mul>
			<range>64</range>
			<color1>255 128 64</color1>
			<color2>200 200 200</color2>
			<color3>128 128 128</color3>
		</mul>
		<add>
			<range>38</range>
			<color1>0 0 0</color1>
			<color2>0 25 50</color2>
			<color3>0 50 64</color3>
		</add>
	</light>		
	
</actor>