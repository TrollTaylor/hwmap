<actor behavior="bomb" minimap="menus/minimap.xml:enemy">
	<behavior>
		<dictionary>
			<entry name="hp"><int>1</int></entry>
			<entry name="dmg"><int>10</int></entry>
			<entry name="buff"><string>buffs/slime_poison.xml</string></entry>
			<entry name="explode-delay"><int>100</int></entry>
			<entry name="min-range"><float>2</float></entry>
			<entry name="max-range"><float>5</float></entry>
			<entry name="dmg-range"><float>1.25</float></entry>
			<entry name="pulse-states"><int>4</int></entry>
