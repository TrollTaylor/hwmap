<doodad defaultlayer="0">
	
	<sprite scale="16" name="pressed">
		<texture>doodads/special/trigger_button.png</texture>
		<origin>0 0</origin>	
		<frame>48 32 16 16</frame>				
	</sprite>			
	
	<sprite scale="16" name="raised">
		<texture>doodads/special/trigger_button.png</texture>
		<origin>0 0</origin>	
		<frame>0 32 16 16</frame>			
	</sprite>				
	
	<sprite scale="16" name="activate">
		<texture>doodads/special/trigger_button.png</texture>
		<origin>0 0</origin>
		<frame time="50">16 32 16 16</frame>		
		<frame time="50">32 32 16 16</frame>										
	</sprite>
	
	<states default="raised">
		<transition from="activate" to="pressed" />
	</states>			
	
</doodad>


