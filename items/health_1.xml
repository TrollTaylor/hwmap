<item behavior="food" minimap="menus/minimap.xml:health">
	<behavior>
		<dictionary>
			<entry name="hp"><int>10</int></entry>
			<entry name="pickup-snd"><string>sound/misc.xml:take_health</string></entry>
			<entry name="pickup-particle"><string>effects/particles.xml:item_health</string></entry>
		</dictionary>
	</behavior>

	<sprite scale="16">
		<texture>items/items.png</texture>
		<origin>8 12</origin>
		<frame time="200">0 112 16 16</frame>	
		<glow scale="16">
			<texture>items/items.png</texture>
				<frame time="200">48 112 16 16</frame>
		</glow>				
	</sprite>
	
	<collision shoot-through="true">
		<polygon>
			<point>-4 4</point>
			<point>-4 -6</point>
			<point>4 -6</point>
			<point>4 4</point>
		</polygon>
	</collision>
</item>