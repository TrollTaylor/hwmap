<item behavior="life">
	<behavior>
		<dictionary>
			<entry name="num"><int>1</int></entry>
			<entry name="pickup-text"><string>item.lifeup?num=1</string></entry>
			<entry name="pickup-snd"><string>sound/misc.xml:take_life</string></entry>
			<entry name="pickup-particle"><string>effects/particles.xml:item_1up</string></entry>
			<entry name="inactive"><string>effects/misc.xml:inactive</string></entry>
		</dictionary>
	</behavior>
	
	<sprite scale="16">
		<texture>items/items.png</texture>
		<origin>8 13</origin>
		<frame time="200">0 240 16 16</frame>
		<frame time="200">16 240 16 16</frame>
		<frame time="200">32 240 16 16</frame>
		<frame time="200">16 240 16 16</frame>		
		<glow scale="16">
			<texture>items/items.png</texture>
				<frame time="200">48 240 16 16</frame>
				<frame time="200">64 240 16 16</frame>
				<frame time="200">80 240 16 16</frame>
				<frame time="200">64 240 16 16</frame>		
		</glow>	
	</sprite>	
	
	<light>
		<origin>0 -5</origin>
		<mul>
			<range>128</range>
			<color1>255 200 0</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</mul>
		<add>
			<range>64</range>
			<color1>50 25 0</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</add>
	</light>	
	
	<collision shoot-through="true">
		<polygon>
			<point>-7 3</point>
			<point>-7 -7</point>
			<point>6 -7</point>
			<point>6 3</point>
		</polygon>
	</collision>
</item>