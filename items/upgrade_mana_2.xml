<item behavior="upgrade" minimap="menus/minimap.xml:upgrade">
	<behavior>
		<dictionary>
			<array name="upgrades">
				<string>max-mana</string>
				<int>20</int>
			</array>
			
			<entry name="pickup-text"><string>item.mpbonus?bonus=20</string></entry>
			<entry name="pickup-snd"><string>sound/misc.xml:take_upgrade</string></entry>
			<entry name="pickup-particle"><string>effects/particles.xml:none</string></entry>
		</dictionary>
	</behavior>


	<sprite random-start="true" scale="16">
		<texture>items/upgrades.png</texture>
		<origin>8 13</origin>
		<frame time="200">0 112 16 16</frame>	
		<frame time="200">16 112 16 16</frame>	
		<frame time="200">32 112 16 16</frame>	
		<frame time="200">16 112 16 16</frame>	
		<glow scale="16">
			<texture>items/upgrades.png</texture>
				<frame time="200">48 112 16 16</frame>	
				<frame time="200">64 112 16 16</frame>	
				<frame time="200">80 112 16 16</frame>	
				<frame time="200">64 112 16 16</frame>	
		</glow>									
	</sprite>

	<collision shoot-through="true">
		<polygon>
			<point>-4 3</point>
			<point>-4 -7</point>
			<point>4 -7</point>
			<point>4 3</point>
		</polygon>
	</collision>
	
	<light>
		<origin>0 -5</origin>
		<mul>
			<range>96</range>
			<color1>100 100 100</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</mul>
		<add>
			<range>64</range>
			<color1>25 25 25</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</add>
	</light>		
</item>