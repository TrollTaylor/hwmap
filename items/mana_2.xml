<item behavior="mana" minimap="menus/minimap.xml:mana">
	<behavior>
		<dictionary>
			<entry name="mana"><int>50</int></entry>
			<entry name="pickup-snd"><string>sound/misc.xml:take_mana</string></entry>
			<entry name="pickup-particle"><string>effects/particles.xml:item_mana</string></entry>
		</dictionary>
	</behavior>

	<sprite scale="16">
		<texture>items/items.png</texture>
		<origin>8 12</origin>
		<frame time="200">0 160 16 16</frame>
		<glow scale="16">
			<texture>items/items.png</texture>
				<frame time="200">48 160 16 16</frame>
		</glow>				
	</sprite>
	
	<collision shoot-through="true">
		<polygon>
			<point>-5 4</point>
			<point>-5 -6</point>
			<point>5 -6</point>
			<point>5 4</point>
		</polygon>
	</collision>
</item>