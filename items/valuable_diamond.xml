<item behavior="money">
	<behavior>
		<dictionary>
			<entry name="amount"><int>250</int></entry>
			<entry name="pickup-snd"><string>sound/misc.xml:take_diamond</string></entry>
			<entry name="pickup-particle"><string>effects/particles.xml:none</string></entry>
		</dictionary>
	</behavior>

	<sprite random-start="true" scale="16">
		<texture>items/items.png</texture>
		<origin>8 14</origin>
		<frame time="1000">96 48 16 16</frame>	
		<frame time="100">112 48 16 16</frame>	
		<frame time="100">128 48 16 16</frame>	
		<frame time="100">144 48 16 16</frame>
		<frame time="100">160 48 16 16</frame>		
		<glow scale="16">
			<texture>items/items.png</texture>
				<frame time="1000">176 48 16 16</frame>	
				<frame time="100">192 48 16 16</frame>	
				<frame time="100">208 48 16 16</frame>	
				<frame time="100">224 48 16 16</frame>
				<frame time="100">240 48 16 16</frame>	
		</glow>			
	</sprite>
	
	<light>
		<origin>0 -5</origin>
		<mul>
			<range>64</range>
			<color1>100 175 255</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</mul>
		<add>
			<range>0</range>
			<color1>50 0 30</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</add>
	</light>		
	
	<collision shoot-through="true">
		<polygon>
			<point>-8 0</point>
			<point>-8 -10</point>
			<point>8 -10</point>
			<point>8 0</point>
		</polygon>
	</collision>
</item>