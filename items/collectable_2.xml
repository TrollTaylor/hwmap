<item behavior="money">
	<behavior>
		<dictionary>
			<entry name="amount"><int>0</int></entry>
			<entry name="pickup-snd"><string>sound/misc.xml:take_letter</string></entry>
			<entry name="pickup-particle"><string>effects/particles.xml:none</string></entry>
		</dictionary>
	</behavior>

	<sprite scale="16">
		<texture>items/items.png</texture>
		<origin>8 13</origin>	
		<frame time="200">0 480 16 16</frame>		
		<frame time="200">16 480 16 16</frame>		
		<frame time="200">32 480 16 16</frame>		
		<frame time="200">16 480 16 16</frame>							
		<glow scale="16">
			<texture>items/items.png</texture>
				<frame time="200">48 480 16 16</frame>		
				<frame time="200">64 480 16 16</frame>		
				<frame time="200">80 480 16 16</frame>		
				<frame time="200">64 480 16 16</frame>		
		</glow>			
	</sprite>
	
	
	<light>
		<origin>0 -5</origin>
		<mul>
			<range>50</range>
			<color1>50 50 50</color1>
			<color2>25 25 25</color2>
			<color3>12 12 12</color3>
		</mul>
		<add>
			<range>0</range>
			<color1>0 10 25</color1>
			<color2>0 0 0</color2>
			<color3>0 0 0</color3>
		</add>
	</light>			
	
	<collision shoot-through="true">
		<circle offset="0 -5" radius="5" />
	</collision>	
</item>